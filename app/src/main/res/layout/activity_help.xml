<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.austinhackathon.symbolink.HelpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOW TO PLAY?"
        android:textSize="25dp"
        android:id="@+id/heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Find two matching symbols that can be connected in 3 or less lines and click them"
        android:layout_below="@+id/heading"
        android:textSize="20dp"
        android:id="@+id/line1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Make sure that there is no symbol in the path between selected symbols."
        android:layout_below="@+id/line1"
        android:textSize="20dp"
        android:id="@+id/line2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Once the matching symbols are linked successfully, they will disappear from the board."
        android:layout_below="@+id/line2"
        android:textSize="20dp"
        android:id="@+id/line3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Clear the entire board within the time by linking all pairs to win the game."
        android:layout_below="@+id/line3"
        android:textSize="20dp"
        android:id="@+id/line4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- The sooner you complete the game, the more points you get."
        android:layout_below="@+id/line4"
        android:textSize="20dp"
        android:id="@+id/line5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All The Best !!!"
        android:layout_below="@+id/line5"
        android:textSize="25dp"
        android:paddingTop="40dp"
        android:textStyle="italic"
        android:id="@+id/last" />

</RelativeLayout>
